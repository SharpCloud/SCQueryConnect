<Window x:Class="SCQueryConnect.Views.SelectDatabaseType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Database Connection Type"
        Height="390"
        Width="300"
        ResizeMode="NoResize"
        Background="#333333"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <ItemsControl ItemsSource="{Binding DatabaseTypes}" VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Click="Button_Click" Height="40" Background="#00AFFC" FontSize="14" Foreground="White" Margin="5" Content="{Binding Name}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
