<Application x:Class="SQLUpdate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="QCBlue" Color="#00AFFC" />
                    <SolidColorBrush x:Key="QCBackground" Color="#333333" />
                    <core:Double x:Key="DefaultFontSize">14</core:Double>
                </ResourceDictionary>

                <ResourceDictionary Source="Dictionaries/Button.xaml"/>
                <ResourceDictionary Source="Dictionaries/Converters.xaml"/>
                <ResourceDictionary Source="Dictionaries/Storyboards.xaml"/>
                <ResourceDictionary Source="Dictionaries/TextBlock.xaml"/>
                <ResourceDictionary Source="Dictionaries/TreeView.xaml"/>
                <ResourceDictionary Source="Dictionaries/Window.xaml"/>
                <ResourceDictionary Source="Dictionaries/BusyOverlay.xaml"/>
                <ResourceDictionary Source="Dictionaries/QueryEditor.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
